#!/bin/bash

set -o nounset
set -o errexit

if [[ $# -lt 1 ]]; then
  echo "USAGE: $0 REPONAME"
  exit -1
fi

REPONAME=$1
REPODIR=/chchruby
REPO_PATH=$REPODIR/$REPONAME.git

mkdir -p $REPODIR
git clone --bare master_repo $REPO_PATH
chmod g+w -R $REPO_PATH
chown git:git -R $REPO_PATH
cd master_repo
git remote add $REPONAME $REPO_PATH
